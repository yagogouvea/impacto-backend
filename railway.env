# Configurações do Railway para Cliente Impacto
# Backend - Sistema Impacto

# Banco de dados PostgreSQL
DATABASE_URL=postgresql://postgres:password@postgres:5432/impacto_db

# JWT Secret (gerar uma chave única)
JWT_SECRET=impacto_jwt_secret_key_2025_very_secure_random_string

# Ambiente
NODE_ENV=production

# CORS Origins permitidos
CORS_ORIGINS=https://painel.impactopr.seg.br,https://api.impactopr.seg.br,https://prestador.impactopr.seg.br

# Porta do servidor
PORT=3001

# Configurações de upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Configurações de segurança
BCRYPT_ROUNDS=12
SESSION_SECRET=impacto_session_secret_2025

# Logs
LOG_LEVEL=info

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações específicas do Impacto
CLIENTE_NOME=Impacto
CLIENTE_DOMINIO=impactopr.seg.br
CLIENTE_EMAIL_CONTATO=contato@impactopr.seg.br